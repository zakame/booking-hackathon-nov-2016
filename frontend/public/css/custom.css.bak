.attractions-item {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  background-size: cover;
  background-position: center;
  border-radius: 5px; }
  .attractions-item:hover input[type='checkbox']:not(:checked) + .checkbox-custom {
    opacity: 1;
    background-color: #FFBB00;
    background-image: url("../images/icon-check.svg"); }
  .attractions-item img {
    border-radius: inherit; }

.attraction-include-this {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  padding: 15px; }
  .attraction-include-this input[type='checkbox'] {
    margin: 0;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    opacity: 0;
    z-index: 2; }
    .attraction-include-this input[type='checkbox'] + .checkbox-custom {
      position: absolute;
      z-index: 1;
      top: 10px;
      right: 10px;
      width: 40px;
      height: 40px;
      background-size: 25px;
      background-repeat: no-repeat;
      background-position: center;
      background-color: rgba(0, 0, 0, 0.15);
      background-image: url("../images/icon-uncheck.svg");
      border-radius: 50%;
      opacity: 0; }
    .attraction-include-this input[type='checkbox']:checked + .checkbox-custom {
      opacity: 1;
      background-color: #51B126;
      background-image: url("../images/icon-check.svg"); }

.attractions-info {
  width: 100%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 15px;
  background: rgba(0, 53, 128, 0.8);
  -webkit-transform: translateY(32px);
      -ms-transform: translateY(32px);
          transform: translateY(32px);
  transition: background 0.3s ease-in-out, -webkit-transform 0.2s ease-in-out;
  transition: transform 0.2s ease-in-out, background 0.3s ease-in-out;
  transition: transform 0.2s ease-in-out, background 0.3s ease-in-out, -webkit-transform 0.2s ease-in-out; }
  .attractions-item:hover .attractions-info {
    -webkit-transform: translateY(0);
        -ms-transform: translateY(0);
            transform: translateY(0);
    background: #003580; }
  .attractions-info h3 {
